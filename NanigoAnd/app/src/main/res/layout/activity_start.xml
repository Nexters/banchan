<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/start_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/start_title"
            style="@style/tv.medium"
            android:layout_gravity="center"
            android:padding="@dimen/small"
            android:text="@string/nanigo" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/large" />

        <TextView
            style="@style/tv.large"
            android:layout_gravity="center"
            android:text="환영합니다" />

        <TextView
            style="@style/tv.medium"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/small"
            android:text="나니고는 결정하기 어려운 질문들에 답변을 하면서 ~ 합니다." />

    </LinearLayout>

    <VideoView
        android:id="@+id/vv_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_start_go"
        android:layout_below="@+id/start_text"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/large" />

    <TextView
        android:id="@+id/btn_start_go"
        style="@style/btn"
        android:layout_above="@+id/btn_start_around"
        android:background="@drawable/btn_color"
        android:text="시작하기" />

    <TextView
        android:id="@+id/btn_start_around"
        style="@style/btn"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/large"
        android:text="둘러보기" />
</RelativeLayout>