<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">


    <include layout="@layout/layout_toolbar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--question title-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:layout_marginLeft="44dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="32dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_answer_title_q"
                    style="@style/tv.question"
                    android:layout_marginRight="6dp"
                    android:text="Q." />

                <TextView
                    android:id="@+id/tv_answer_title"
                    style="@style/tv.medium"
                    android:text="전 남친한테 새벽에 연락왔는데 답장해볼까?"
                    android:textColor="@color/nanigoBlack" />
            </LinearLayout>


            <!--open start-->
            <LinearLayout
                android:id="@+id/ll_answer_open"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="@style/tv"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="더보기"
                    android:textColor="@color/nanigoGrey"
                    android:textSize="16sp" />

                <ImageView
                    style="@style/iv"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_open" />
            </LinearLayout>
            <!--ic open end-->
            <!--question view START-->

            <!--question view END-->
            <!--fold start-->
            <LinearLayout
                android:id="@+id/ll_answer_fold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    style="@style/tv"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="접기"
                    android:textColor="@color/nanigoGrey"
                    android:textSize="16sp" />

                <ImageView
                    style="@style/iv"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_fold" />
            </LinearLayout>
            <!--ic fold end-->


            <View
                style="@style/divider_answer"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="14dp" />

            <!--투표결과 START-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="@style/tv"
                    android:layout_marginRight="5dp"
                    android:text="투표결과"
                    android:textColor="@color/nanigoBlack"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_answer_count"
                    style="@style/tv_noto"
                    android:text="(총 00명이 참여)"
                    android:textColor="@color/nanigoBlack"
                    android:textSize="12sp" />
            </LinearLayout>
            <!--투표결과 END-->
            <!--당첨 START-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_answer_selected"
                    style="@style/iv"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:src="@drawable/ic_a_big" />

                <TextView
                    android:id="@+id/tv_answer_selected"
                    style="@style/tv_noto"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="85%"
                    android:textColor="@color/nanigoBlack"
                    android:textSize="38sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <!--당첨 END-->

            <!--chart view 1 START-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_answer_small_1"
                    style="@style/iv"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:src="@drawable/ic_a_small" />

                <TextView
                    android:id="@+id/tv_answer_small_1"
                    style="@style/tv_noto"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="화이트백"
                    android:textColor="@color/nanigoBlack"
                    android:textSize="12sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="12.2dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="5.8dp"
                android:background="@drawable/bg_chart_round_grey"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/tv_answer_gauge_1"
                        style="@style/tv_noto"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.8"
                        android:background="@drawable/bg_chart_round_case1"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_answer_gauge_percentage_1"
                    style="@style/tv_noto"
                    android:layout_gravity="center"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="17.6dp"
                    android:text="85%"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </RelativeLayout>
            <!--chart view 1 END-->


            <!--chart view 2 START-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_answer_small_2"
                    style="@style/iv"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:src="@drawable/ic_b_small" />

                <TextView
                    android:id="@+id/tv_answer_small_2"
                    style="@style/tv_noto"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="캐쥬얼백"
                    android:textColor="@color/nanigoBlack"
                    android:textSize="12sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="12.2dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="5.8dp"
                android:background="@drawable/bg_chart_round_grey"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/tv_answer_gauge_2"
                        style="@style/tv_noto"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="0.6"
                        android:background="@drawable/bg_chart_round_case2"
                        android:gravity="center_vertical" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_answer_gauge_percentage_2"
                    style="@style/tv_noto"
                    android:layout_gravity="center"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="17.6dp"
                    android:text="85%"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </RelativeLayout>
            <!--chart view 2 END-->

            <!--info view START-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height"
                android:background="@color/nanigoGrey20"
                android:gravity="center_vertical|right"
                android:orientation="horizontal">

                <ImageView
                    style="@style/iv"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="3dp"
                    android:src="@drawable/icon_answer_view_count" />

                <TextView
                    style="@style/tv_noto"
                    android:layout_centerVertical="true"
                    android:text="30"
                        android:id="@+id/tv_answer_view_count"
                    android:textColor="#b38799a3"
                    android:textSize="15sp" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="13dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="13dp"
                    android:background="#8799a3" />

                <ImageView
                    style="@style/iv"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="3dp"
                    android:src="@drawable/icon_answer_comment_count" />

                <TextView
                    android:id="@+id/tv_answer_comment_count"
                    style="@style/tv_noto"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="32dp"
                    android:text="30"
                    android:textColor="#b38799a3"
                    android:textSize="15sp" />
            </LinearLayout>
            <!--info view END-->
            <View style="@style/divider_answer" />

            <!--reviews START-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/nanigoGrey20"
                android:orientation="vertical"
                android:paddingTop="20dp">
                <!--input-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/bg_review_input_box">

                    <EditText
                        android:id="@+id/et_answer_review_input"
                        style="@style/tv_noto"
                        android:layout_width="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/btn_answer_reviews_submit"
                        android:background="@null"
                        android:hint="댓글 입력..."
                        android:inputType="textCapSentences|textMultiLine"
                        android:maxLength="300"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/btn_answer_reviews_submit"
                        style="@style/tv_noto"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="15dp"
                        android:text="등록"
                        android:textColor="#5f7f90"
                        android:textSize="15sp" />
                </RelativeLayout>
                <!--input end-->
                <!--<android.support.v4.widget.SwipeRefreshLayout-->
                <!--android:id="@+id/swipe_answer_reviews"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:orientation="vertical">-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="32dp">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_answer_reviews_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:id="@+id/ll_answer_reviews_empty"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            style="@style/iv"
                            android:src="@mipmap/ic_launcher" />

                        <TextView
                            style="@style/tv.small"
                            android:text="@string/empty" />
                    </LinearLayout>
                </RelativeLayout>


                <!--</android.support.v4.widget.SwipeRefreshLayout>-->
            </LinearLayout>

            <!--reviews END-->
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>